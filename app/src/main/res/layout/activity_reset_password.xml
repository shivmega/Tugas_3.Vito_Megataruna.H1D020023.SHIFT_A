<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageButton
        android:id="@+id/btnBackspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:backgroundTint="@android:color/transparent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@android:color/black"
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset code has sent to your Email. Please enter the code and create a new password"
        android:textSize="20dp"
        android:marginTop="16dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginHorizontal="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Code"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="42dp"/>
    <EditText
        android:id="@+id/etResetCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter your number"
        android:layout_marginHorizontal="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="42dp"/>
    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:layout_marginHorizontal="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="42dp"/>
    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter your confirm password"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="42dp"/>
<!--    <Button-->
<!--        android:id="@+id/btnFrgtPass"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="right"-->
<!--        android:text="Forgot Password"-->
<!--        android:textColor="@android:color/black"-->
<!--        android:background=""-->
<!--        android:paddingVertical="24dp"-->
<!--        android:layout_marginHorizontal="12dp"/>-->
    <Button
        android:id="@+id/changePass"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Change password"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_marginHorizontal="12dp"/>
</LinearLayout>
